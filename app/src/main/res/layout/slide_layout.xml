<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/eat" />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slide_image"
        android:text="HEADING"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="29sp"
        android:textColor="@color/header"
        android:layout_marginVertical="30dp"/>
    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slide_heading"
        android:gravity="center"
        android:textColor="@color/colSub"
        android:fontFamily="@font/lato_regular"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad."
        android:layout_marginHorizontal="30dp"
        android:textSize="16sp"/>



</RelativeLayout>